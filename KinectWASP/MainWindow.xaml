<Window x:Class="KinectWASP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kinect App" Width="800" Height="600"
        KeyDown="Window_KeyDown">
    <Canvas x:Name="DepthCanvas"
            MouseLeftButtonDown="DepthCanvas_MouseLeftButtonDown"
            MouseMove="DepthCanvas_MouseMove"
            MouseLeftButtonUp="DepthCanvas_MouseLeftButtonUp">

        <!-- Tiefenbild fest auf 640 x 480 -->
        <Image x:Name="DepthVideo" 
               Width="640" Height="480" 
               Stretch="None" />

        <!-- Auswahl-Rechteck -->
        <Rectangle x:Name="SelectionRectangle"
                   Stroke="Red" StrokeThickness="2" 
                   Visibility="Collapsed" />

        <!-- Anzeige der Berechnungen -->
        <TextBlock x:Name="CalculationText"
                   Foreground="Yellow" 
                   Background="Black" 
                   Opacity="0.7"
                   FontSize="16"
                   Visibility="Collapsed"
                   Canvas.Left="10" 
                   Canvas.Top="10" />
    </Canvas>
</Window>
